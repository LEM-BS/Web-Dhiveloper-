---
import Base from "../layouts/Base.astro";
const posts = await Astro.glob('./case-studies/*.md');
---
<Base title="Portfolio — Recent work | Web Dhiveloper" description="A few examples of fast launches and ongoing growth.">
  <h1>Portfolio</h1>
  <div class="grid md:grid-cols-2 gap-6 mt-6">
    {posts.map(p => (
      <a href={p.url} class="card no-underline">
        <h3 class="mb-2">{p.frontmatter.title}</h3>
        <p class="text-sm text-slate-600">{p.frontmatter.summary}</p>
        <p class="mt-3 text-xs text-slate-500">{p.frontmatter.location} • {new Date(p.frontmatter.date).toLocaleDateString('en-GB')}</p>
      </a>
    ))}
  </div>
</Base>
