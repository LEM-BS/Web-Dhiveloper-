---
import Base from "../layouts/Base.astro";
---
<Base title="Contact — Get a quote" description="Tell us about your business and we’ll recommend the right package.">
  <h1>Get a quote</h1>
  <p class="mb-6">Tell us what you do, where you operate, and what you need from your website.</p>
  <form name="contact" method="POST" action="/success" data-netlify="true" netlify-honeypot="bot-field" class="card grid gap-4 max-w-xl">
    <input type="hidden" name="form-name" value="contact" />
    <p class="hidden">
      <label>Don’t fill this in: <input name="bot-field" /></label>
    </p>
    <label class="grid gap-1">Name<input class="border rounded-xl px-3 py-2" name="name" required></label>
    <label class="grid gap-1">Email<input class="border rounded-xl px-3 py-2" type="email" name="email" required></label>
    <label class="grid gap-1">Business<input class="border rounded-xl px-3 py-2" name="business"></label>
    <label class="grid gap-1">What do you need?<textarea class="border rounded-xl px-3 py-2" name="message" rows="5" required></textarea></label>
    <button type="submit" class="btn">Send</button>
  </form>
</Base>
